@model SemesterTwo.Models.CustomerProfile

<section class="form-section">
    <h2 class="section-heading">Profile Information</h2>
    <form asp-action="AddCustomerProfile" method="post">
        <div class="form-group">
            <label for="FirstName">First Name</label>
            <input type="text" name="FirstName" id="FirstName" placeholder="First Name" class="form-control" />
        </div>
        <div class="form-group">
            <label for="LastName">Last Name</label>
            <input type="text" name="LastName" id="LastName" placeholder="Last Name" class="form-control" />
        </div>
        <div class="form-group">
            <label for="Email">Email</label>
            <input type="email" name="Email" id="Email" placeholder="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            <input type="text" name="PhoneNumber" id="PhoneNumber" placeholder="Phone Number" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Add Profile</button>
    </form>
</section>

<section class="form-section">
    <h2 class="section-heading">Process Order</h2>
    <form asp-action="ProcessOrder" method="post">
        <div class="form-group">
            <label for="orderId">Order ID</label>
            <input type="text" name="orderId" id="orderId" placeholder="Order ID" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Process Order</button>
    </form>
</section>

<section class="form-section">
    <h2 class="section-heading">Upload Media</h2>
    <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Upload Image</label>
            <input type="file" name="file" id="file" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Upload Image</button>
    </form>
</section>

<section class="form-section">
    <h2 class="section-heading">Upload Contract</h2>
    <form asp-action="UploadContract" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="file">Upload Contract</label>
            <input type="file" name="file" id="file" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Upload Contract</button>
    </form>
</section>